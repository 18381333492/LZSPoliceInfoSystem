@{
    Layout = null;
}
@using Web.Models;
@model List<TG_Category>
<style>
    #dataForm p{
        text-align:center
    }
    ul li{
        float:left;
        margin-right:10px;
        margin-bottom:10px;
    }
</style>
<!--添加用户-->
<form id="dataForm">
    <div style="padding-left:5px;margin:auto;margin-top:20px;">
        <p>
            <label>账户：</label><input class="easyui-textbox" name="sUserName" style="width:200px" data-options="required:true,validType:'length[3,20]'"
                                      invalidmessage="账户长度介于3-20之间">    
        </p>    
        <p>
            <label>密码：</label><input id="pwd" class="easyui-textbox" name="sPassword" style="width:200px"  data-options="required:true,validType:'length[6,255]'"
                                      invalidmessage="密码长度应大于6位" type="password">
        </p>
        @*<p>
            <label>密码：</label><input class="easyui-textbox" name="resPassword" style="width:200px"  data-options="required:true" validType="equals['#pwd']"  type="password">
        </p>*@
        <p>
            <label>姓名：</label><input class="easyui-textbox" name="sRealName" style="width:200px"  >
        </p>
        <p>
            <label>电话：</label><input class="easyui-textbox" name="sPhone" style="width:200px"  validType="isPhone" >
        </p>
        <p>
            <label>权限设置：</label>
            <ul style="list-style:none">
                @foreach (var category in Model)
                {
                    <li><input type="checkbox" value="@category.ID" class="select_category" />@(category.sName)&nbsp;</li>
                }
            </ul>       
        </p>
    </div>
</form>
<script type="text/javascript">
    $(function () {
        $('.select_category').iCheck({
            labelHover: false,
            cursor: true,
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%'
        });
    });
</script>