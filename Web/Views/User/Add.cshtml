

<style>
    #dataForm p{
        text-align:center
    }
</style>
<!--添加用户-->
<form id="dataForm">
    <div style="padding-left:5px;margin:auto">
        <p>
            <label>账户：</label><input class="easyui-textbox" name="sUserName" data-options="required:true,validType:'length[3,20]'"
                                      invalidmessage="账户长度介于3-20之间">    
        </p>    
        <p>
            <label>密码：</label><input id="pwd" class="easyui-textbox" name="sPassword" data-options="required:true,validType:'length[6,255]'"
                                      invalidmessage="密码长度应大于6位" type="password">
        </p>
        <p>
            <label>密码：</label><input class="easyui-textbox" name="resPassword" data-options="required:true" validType="equals['#pwd']"  type="password">
        </p>
        <p>
            <label>姓名：</label><input class="easyui-textbox" name="sRealName" >
        </p>
        <p>
            <label>电话：</label><input class="easyui-textbox" name="sPhone" validType="isPhone" >
        </p>
    </div>
</form>

