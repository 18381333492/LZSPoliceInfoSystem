

<style>
    #dataForm p{
        text-align:center
    }
</style>
<!--修改密码-->
<form id="dataForm">
    <div style="padding-left:5px;margin:auto">
        <p>
            <label>原密码：</label><input class="easyui-textbox" name="sOldPwd" data-options="required:true" type="password">    
        </p>    
        <p>
            <label>新密码：</label><input id="pwd" class="easyui-textbox" name="sNewPwd" data-options="required:true,validType:'length[6,255]'"
                                      invalidmessage="密码长度应大于6位" type="password">
        </p>
        <p>
            <label>新密码：</label><input class="easyui-textbox" name="resPassword" data-options="required:true" validType="equals['#pwd']"  type="password">
        </p>
    </div>
</form>