@using Web.Server;
@using Web.Models;
@{  var CurrentCategory=Model as TG_Category }
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>泸州公安交警信息网</title>
    <link href="css/base.css" rel="stylesheet" type="text/css" />
    <link href="css/main.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="js/nav.js"></script>
    <script src="js/Tabs.js"></script>
    <script src="js/jquery.page.js"></script>
</head>
<body>
    @Include("top")
    <div class="container mg-t-b container_col">
        <div class="page-right" style="padding:0 30px;float:none;width:auto">
            <div class="pagelujing"><div class="name">警务动态</div><span>您当前所在位置：<a>首页</a> > <a>新闻动态</a> > <a>警务动态</a></span></div>
            <div class="news-txt ny mg-t-b">
                <div class="news-con">
                    <ul class="newslist ny">
                        @foreach (var article in FuncHelper.Instance.GetCategoryAllArticleList(CurrentCategory.ID))
                        {
                        <li>
                            <a href="@FuncHelper.Instance.GetArticleHtmlUrl(article.ID)">@article.sTitle</a>
                            <span>@article.dInsertTime.Value.ToString("yyyy-MM-dd HH:mm")</span>
                        </li>
                        }
                    </ul>
                    <div class="tcdPageCode"></div>
                </div>
            </div>

        </div>
        <div class="clearfix"></div>
    </div>
    @Include("bottom")
</body>
</html>
<script type="text/javascript">
    //初始化分页器
    $(".tcdPageCode").createPage({
        pageCount:100,
        current:1,
        backFn:function(p){
            //console.log(p);
        }
    });
</script>
